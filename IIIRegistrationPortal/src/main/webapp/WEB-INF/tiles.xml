<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="baseLayout" template="/WEB-INF/util/baseLayout.jsp">
        <put-attribute name="title" value="IIIRegistrationPortal" />
        <put-attribute name="contextPath" value="/iiiexams" />
        <put-attribute name="headContent" value="/WEB-INF/util/headContent.jsp" />
        <put-attribute name="header" value="/WEB-INF/util/header.jsp" />
        <put-attribute name="menu" value="/WEB-INF/util/menu.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/util/footer.jsp" />
        <put-attribute name="jsIncludes" value="/WEB-INF/util/jsIncludes.jsp" />
    </definition>

    <definition name="loginPage" extends="baseLayout">
        <put-attribute name="title" value="Login" />
        <put-attribute name="body" value="/WEB-INF/login/login.jsp" />
    </definition>

    <definition name="dashboardPage" extends="baseLayout">
        <put-attribute name="title" value="Dashboard" />
        <put-attribute name="body" value="/WEB-INF/login/dashboard.jsp" />
    </definition>

    <definition name="forgotPasswordPage" extends="baseLayout">
        <put-attribute name="title" value="Forgot Password" />
        <put-attribute name="body" value="/WEB-INF/login/forgotPassword.jsp" />
    </definition>

    <definition name="changePasswordPage" extends="baseLayout">
        <put-attribute name="title" value="Change Password" />
        <put-attribute name="body" value="/WEB-INF/login/changePassword.jsp" />
    </definition>

    <definition name="health" extends="baseLayout">
        <put-attribute name="title" value="Health Check" />
        <put-attribute name="body" value="/WEB-INF/health/health.jsp" />
    </definition>

</tiles-definitions>